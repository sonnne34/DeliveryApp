<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/qlightGrayBackground"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_dish_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_dish_menu"
                android:background="@drawable/logo_tras_mini"
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        <LinearLayout
            android:id="@+id/layout_dish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/image_dish_menu"
            android:padding="2dp"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/image_dish_menu">

            <TextView
                android:id="@+id/text_roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/qblackFont"
                android:layout_margin="2dp"
                android:text="HEY"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/discription_text"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/qgrayAdditionalFont"
                android:layout_margin="1dp"
                android:maxLines="4"
                android:layout_below="@+id/text_roll"
                android:text="Описание"/>

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_wt_prise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_dish_card"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_roll_weight"
                android:textSize="15sp"
                android:layout_width="120dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/qblackFont"
                android:background="@drawable/okrugl_wt"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_weight="1"
                android:text="215 гр." />

            <TextView
                android:id="@+id/txt_roll_price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="bottom"
                android:background="@drawable/okrugl_wt"
                android:gravity="center"
                android:text="100 руб"
                android:textColor="@color/qblackFont"
                android:layout_weight="1"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/checkBoxItem"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_width="7dp"
            android:layout_height="130dp"
            android:layout_marginStart="7dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>